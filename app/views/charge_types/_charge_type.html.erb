<div id="<%= dom_id charge_type %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= charge_type.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Amount:</strong>
    <%= number_to_currency(charge_type.amount) %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Frequency:</strong>
    <%= charge_type.frequency %>
  </div>
</div>
