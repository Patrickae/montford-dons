<%= form_with(model: week, class: "contents") do |form| %>
  <% if week.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(week.errors.count, "error") %> prohibited this week from being saved:</h2>

      <ul class="list-disc ml-6">
        <% week.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :date %>
    <%= form.date_field :date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": week.errors[:date].none?, "border-red-400 focus:outline-red-600": week.errors[:date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :opponent %>
    <%= form.text_field :opponent, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": week.errors[:opponent].none?, "border-red-400 focus:outline-red-600": week.errors[:opponent].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :lanes %>
    <%= form.text_field :lanes, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": week.errors[:lanes].none?, "border-red-400 focus:outline-red-600": week.errors[:lanes].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
