<div id="<%= dom_id week %>" class="space-y-3">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="flex items-center space-x-3">
      <div class="flex-shrink-0">
        <div class="p-2 bg-blue-100 rounded-lg">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-500">Date</p>
        <p class="text-base font-semibold text-gray-900"><%= week.date&.strftime("%a, %b %d, %Y") %></p>
      </div>
    </div>

    <div class="flex items-center space-x-3">
      <div class="flex-shrink-0">
        <div class="p-2 bg-red-100 rounded-lg">
          <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z"></path>
          </svg>
        </div>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-500">Opponent</p>
        <p class="text-base font-semibold text-gray-900"><%= week.opponent %></p>
      </div>
    </div>

    <div class="flex items-center space-x-3">
      <div class="flex-shrink-0">
        <div class="p-2 bg-green-100 rounded-lg">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </div>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-500">Lanes</p>
        <p class="text-base font-semibold text-gray-900">
          <% if week.lanes.present? %>
            <%= week.lanes %>
          <% else %>
            <span class="text-gray-400">Not assigned</span>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>
