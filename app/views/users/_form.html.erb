<div class="bg-white rounded-lg shadow-sm p-6">
  <%= form_with(model: user, class: "space-y-6") do |form| %>
    <% if user.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% user.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-1">
        <%= form.label :first_name, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :first_name, 
            class: ["mt-1 py-2 px-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", 
                   {"border-red-300 focus:border-red-500 focus:ring-red-500": user.errors[:first_name].any?}],
            placeholder: "Enter first name" %>
        <% if user.errors[:first_name].any? %>
          <p class="mt-1 text-sm text-red-600"><%= user.errors[:first_name].first %></p>
        <% end %>
      </div>

      <div class="space-y-1">
        <%= form.label :last_name, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :last_name, 
            class: ["mt-1 py-2 px-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", 
                   {"border-red-300 focus:border-red-500 focus:ring-red-500": user.errors[:last_name].any?}],
            placeholder: "Enter last name" %>
        <% if user.errors[:last_name].any? %>
          <p class="mt-1 text-sm text-red-600"><%= user.errors[:last_name].first %></p>
        <% end %>
      </div>

      <div class="space-y-1">
        <%= form.label :email_address, "Email Address", class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email_address, 
            class: ["mt-1 py-2 px-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", 
                   {"border-red-300 focus:border-red-500 focus:ring-red-500": user.errors[:email_address].any?}],
            placeholder: "Enter email address" %>
        <% if user.errors[:email_address].any? %>
          <p class="mt-1 text-sm text-red-600"><%= user.errors[:email_address].first %></p>
        <% end %>
      </div>

      <div class="space-y-1">
        <%= form.label :phone_number, "Phone Number", class: "block text-sm font-medium text-gray-700" %>
        <%= form.telephone_field :phone_number, 
            class: ["mt-1 py-2 px-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", 
                   {"border-red-300 focus:border-red-500 focus:ring-red-500": user.errors[:phone_number].any?}],
            placeholder: "Enter phone number" %>
        <% if user.errors[:phone_number].any? %>
          <p class="mt-1 text-sm text-red-600"><%= user.errors[:phone_number].first %></p>
        <% end %>
      </div>

      <div class="space-y-1">
        <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password, 
            class: ["mt-1 py-2 px-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", 
                   {"border-red-300 focus:border-red-500 focus:ring-red-500": user.errors[:password].any?}],
            placeholder: user.persisted? ? "Leave blank to keep current password" : "Enter password" %>
        <% if user.errors[:password].any? %>
          <p class="mt-1 text-sm text-red-600"><%= user.errors[:password].first %></p>
        <% end %>
      </div>

      <div class="space-y-1">
        <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password_confirmation, 
            class: ["mt-1 py-2 px-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", 
                   {"border-red-300 focus:border-red-500 focus:ring-red-500": user.errors[:password_confirmation].any?}],
            placeholder: user.persisted? ? "Leave blank to keep current password" : "Confirm password" %>
        <% if user.errors[:password_confirmation].any? %>
          <p class="mt-1 text-sm text-red-600"><%= user.errors[:password_confirmation].first %></p>
        <% end %>
      </div>
    </div>

    <!-- Admin Checkbox -->
    <% if can? :manage, User %>
      <div class="border-t border-gray-200 pt-6">
        <div class="flex items-center">
          <%= form.check_box :is_admin, 
              class: ["h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded", 
                     {"border-red-300 focus:border-red-500 focus:ring-red-500": user.errors[:is_admin].any?}] %>
          <%= form.label :is_admin, "Administrator", class: "ml-2 block text-sm font-medium text-gray-700" %>
        </div>
        <p class="mt-1 text-sm text-gray-500">Administrators have full access to manage users, payments, and system settings.</p>
        <% if user.errors[:is_admin].any? %>
          <p class="mt-1 text-sm text-red-600"><%= user.errors[:is_admin].first %></p>
        <% end %>
      </div>
    <% end %>

    <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
      <%= link_to "Cancel", user.persisted? ? user : users_path, 
          class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= form.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>
</div>
